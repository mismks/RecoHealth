<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liteblue"
    tools:context=".UserAreaActivity">

    <ImageView
        android:id="@+id/logoimgg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/backlogo" />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome User"
        android:layout_below="@+id/logoimgg"
        android:textColor="@color/logocolor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/ProfileActivity"
        android:layout_width="@dimen/buttonwidth"
        android:layout_height="@dimen/buttonheight"
        android:layout_below="@+id/txt_user_name"
        android:background="@drawable/butondesign"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Profile" />

    <Button
        android:id="@+id/ReportsActivity"
        android:layout_width="@dimen/buttonwidth"
        android:layout_height="@dimen/buttonheight"
        android:layout_below="@id/ProfileActivity"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Reports"
        android:background="@drawable/butondesign"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Logout"
        android:layout_width="@dimen/buttonwidth"
        android:layout_height="@dimen/buttonheight"
        android:layout_below="@+id/ReportsActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/butondesign"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="17dp"
        />




</RelativeLayout>